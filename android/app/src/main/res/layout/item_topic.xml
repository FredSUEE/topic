<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="@string/taylor_swift_break_up_again"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/title_text_size"/>

    <ImageView
        android:id="@+id/subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/title"
        android:src="@drawable/ic_add"/>

    <ImageView
        android:id="@+id/topic_image"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/title"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/topic_image"
        android:layout_below="@id/subscribe"
        android:layout_toRightOf="@id/topic_image"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:text="@string/fjeoajfoajldalflafldflef"
        android:textColor="@color/main_text_color"/>

</RelativeLayout>